{
    "version": "3.1.0",
    "description": "Decentralized cryptocurrency blockchain daemon implementing the XRP Ledger protocol.",
    "homepage": "https://xrpl.org",
    "license": "ISC",
    "url": "https://github.com/XRPLF/rippled/archive/refs/tags/3.1.0.zip",
    "hash": "fc2a259dc42c92217c0225197f24dd5cd8836bad4b5583be3ce8ff40cb895bae",
    "extract_dir": "rippled-3.1.0",
    "pre_install": [
        "cd $dir",
        "conan config install conan/profiles/ -tf \"$(conan config home)\\profiles\\\"",
        "conan remote add --index 0 xrplf --force https://conan.ripplex.io",
        "mkdir .build && cd .build",
        "conan install .. --output-folder . --build missing --settings build_type=Release",
        "cmake -DCMAKE_TOOLCHAIN_FILE:FILEPATH=build\\generators\\conan_toolchain.cmake -DCMAKE_BUILD_TYPE=Release -Dxrpld=ON -Dtests=OFF ..",
        "cmake --build . --config Release"
    ],
    "depends": [
        "main/mingw-winlibs",
        "main/python",
        "main/conan",
        "main/cmake"
    ],
    "bin": [
        [
            ".build\\Release\\rippled.exe",
            "rippled"
        ]
    ],
    "checkver": {
        "github": "https://github.com/XRPLF/rippled"
    },
    "autoupdate": {
        "url": "https://github.com/XRPLF/rippled/archive/refs/tags/$version.zip",
        "extract_dir": "rippled-$version"
    }
}
